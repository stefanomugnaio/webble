{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<section class="d-flex align-items-center justify-content-center" style="min-height: 100vh;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5 col-lg-4">

                <div class="card shadow-lg border-0">
                    <div class="card-body p-4">

                        <h1 class="h4 mb-4 text-center fw-bold">Connexion à votre compte</h1>

                        {# --- Message d’erreur --- #}
                        {% if error %}
                            <div class="alert alert-danger text-center py-2">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}

                        {# --- Déjà connecté ? --- #}
                        {% if app.user %}
                            <div class="alert alert-info text-center mb-3">
                                Vous êtes connecté en tant que <strong>{{ app.user.userIdentifier }}</strong>.
                                <br>
                                <a href="{{ path('app_logout') }}" class="text-decoration-underline">Se déconnecter</a>
                            </div>
                        {% endif %}

                        <form method="post">

                            <div class="mb-3">
                                <label for="inputEmail" class="form-label fw-semibold">Adresse email</label>
                                <input
                                    type="email"
                                    name="email"
                                    id="inputEmail"
                                    class="form-control"
                                    value="{{ last_username }}"
                                    autocomplete="email"
                                    required
                                    autofocus
                                >
                            </div>

                            <div class="mb-3">
                                <label for="inputPassword" class="form-label fw-semibold">Mot de passe</label>
                                <input
                                    type="password"
                                    name="password"
                                    id="inputPassword"
                                    class="form-control"
                                    autocomplete="current-password"
                                    required
                                >
                            </div>

                            <input
                                type="hidden"
                                name="_csrf_token"
                                value="{{ csrf_token('authenticate') }}"
                            >

                            <div class="form-check mb-3">
                                <input type="checkbox" class="form-check-input" name="_remember_me" id="rememberMe">
                                <label class="form-check-label" for="rememberMe">Se souvenir de moi</label>
                            </div>

                            <button class="btn btn-primary w-100 py-2 fw-semibold" type="submit">
                                Se connecter
                            </button>
                        </form>

                        <p class="text-center mt-4 small">
                            Mot de passe oublié ?
                            <a href="{{ path('app_contact') }}">Contactez-moi</a>
                        </p>

                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
{% endblock %}
