{% extends 'base.html.twig' %}

{% block title %}Devis – {{ offre.libelle }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('envoi_devis') }}

{% endblock %}

{% block body %}
<section class="py-5 text-white" style="min-height: 100vh;">
    <div class="container">

        {# ================= HEADER ================= #}
        <div class="text-center mb-4">
            <p class="text-uppercase small text-secondary mb-1">Demande de devis</p>
            <h1 class="fw-bold">Offre {{ offre.libelle }}</h1>
            <p class="text-secondary">{{ offre.description }}</p>
        </div>

        {{ form_start(form, {
            attr: {
                id: 'contact-form',
                'data-recaptcha-site-key': recaptcha_site_key
            }
        }) }}

        {# ================= COORDONNÉES ================= #}
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h5 class="fw-semibold mb-3">Vos coordonnées</h5>

                <div class="row g-3">
                    <div class="col-md-6">
                        {{ form_label(form.nom) }}
                        {{ form_widget(form.nom) }}
                        <div class="error-message">{{ form_errors(form.nom) }}</div>
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.prenom) }}
                        {{ form_widget(form.prenom) }}
                        <div class="error-message">{{ form_errors(form.prenom) }}</div>
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.email) }}
                        {{ form_widget(form.email) }}
                        <div class="error-message">{{ form_errors(form.email) }}</div>
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.telephone) }}
                        {{ form_widget(form.telephone) }}
                        <div class="error-message">{{ form_errors(form.telephone) }}</div>
                    </div>
                    <div class="col-12">
                        {{ form_label(form.adresse) }}
                        {{ form_widget(form.adresse) }}
                        <div class="error-message">{{ form_errors(form.adresse) }}</div>
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.code_postal) }}
                        {{ form_widget(form.code_postal) }}
                        <div class="error-message">{{ form_errors(form.code_postal) }}</div>
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.ville) }}
                        {{ form_widget(form.ville) }}
                        <div class="error-message">{{ form_errors(form.ville) }}</div>
                    </div>
                </div>
            </div>
        </div>

        {# ================= CONTENU OFFRE ================= #}
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h5 class="fw-semibold mb-3">Ce que comprend l’offre</h5>
                <ul class="list-unstyled mb-0">
                    {% for item in offre.caracteristiques %}
                        <li class="mb-2">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                            {{ item }}
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>

        {# ================= RÉCAP ================= #}
        <div class="card shadow-sm mb-4">
            <div class="card-body">

                <h5 class="fw-semibold mb-4">Récapitulatif</h5>

                {# CHECKBOX MAINTENANCE #}
                <div class="mb-4 bg-light p-3 rounded">
                    {{ form_widget(form.contrat_maintenance, { attr: { class: 'form-check-input' } }) }}
                    {{ form_label(form.contrat_maintenance, null, { label_attr: { class: 'form-check-label ms-2' } }) }}

                    <p class="small text-muted mt-2 mb-0">
                        Un contrat de maintenance est proposé afin d’assurer la sécurité, les mises à jour,
                        les modifications mineures et l’assistance technique.
                        <a  target="_blank" href="{{ path('app_cdm') }}">
                            Voir le détail du contrat de maintenance
                        </a>
                    </p>


                </div>

                {% if montants.site_ht is not null %}
                    <script>
                        window.montantSiteHT = {{ montants.site_ht }};
                        window.maintenanceHT = {{ montants.maintenance_annuelle }};
                        window.tauxTVA = {{ taux_tva }};
                        window.offerLabel = "{{ offre.libelle }}";
                    </script>

                    <div class="row mb-2">
                        <div class="col-7 text-muted small">Site web (HT)</div>
                        <div class="col-5 text-end fw-semibold">
                            {{ montants.site_ht|number_format(2, ',', ' ') }} €
                        </div>
                    </div>

                    <div id="maintenanceRow" class="row mb-3 align-items-center gray-row">
                        <div class="col-7 small">
                            {% if offre.libelle == 'Sérieuse' %}
                                Contrat de maintenance (3 mois offerts)
                            {% else %}
                                Contrat de maintenance annuelle
                            {% endif %}
                        </div>
                        <div class="col-5 text-end fw-semibold" id="maintenanceAmount">
                            0,00 €
                        </div>
                    </div>

                    <hr>

                    <div class="row mb-2">
                        <div class="col-6 text-muted small">TVA (20 %)</div>
                        <div class="col-6 text-end fw-semibold" id="tvaAmount">
                            {{ montants.total_tva|number_format(2, ',', ' ') }} €
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-6 fw-bold">Total TTC</div>
                        <div class="col-6 text-end fw-bold" id="totalTtc">
                            {{ montants.total_ttc|number_format(2, ',', ' ') }} €
                        </div>
                    </div>
                {% endif %}

                {# RGPD #}
                <div class="mt-4 p-3 border rounded bg-white">
                    <div class="form-check d-flex align-items-start">
                        {{ form_widget(form.rgpd, { attr: { class: 'form-check-input mt-1', required: true } }) }}
                        <label class="form-check-label ms-2">
                            J’ai lu et j’accepte la
                            <a href="{{ path('app_politique_confidentialite') }}" target="_blank" class="text-decoration-underline">
                                politique de confidentialité
                            </a>.
                            <span class="text-danger">*</span>
                        </label>
                    </div>
                    <div class="error-message">{{ form_errors(form.rgpd) }}</div>
                </div>

                <div class="col-12 mt-3">
                    {{ form_widget(form.recaptchaToken) }}  
                </div>

            </div>
        </div>

        {# ACTIONS #}
        <div class="d-flex justify-content-between">
            <a href="{{ path('app_creation_site') }}" class="btn btn-outline-secondary">
                Retour aux offres
            </a>
            <button type="submit" class="btn btn-primary px-4">
                Envoyer la demande de devis
            </button>
        </div>

        {{ form_end(form) }}

    </div>
</section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://www.google.com/recaptcha/api.js?render={{ recaptcha_site_key }}"></script>
    {{ encore_entry_script_tags('envoi_devis') }}
{% endblock %}
